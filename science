	<script type="text/javascript">
	function searchChk(){
		if($('#Search-Str').val()==''){
			alert('請輸入搜尋關鍵字');
			return false;
		}
		return true;
	}
	$(function(){
		$('.Search-Type').click(function(){
			if(parseInt($(this).val())==1){
				$('#cx-val').val('07e9df721e2064180');
			}else{
				$('#cx-val').val('750e5fd82889f4d7f');
			}
		});
	});
	</script>

	


